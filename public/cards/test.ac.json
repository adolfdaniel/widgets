{
  "type": "AdaptiveCard",
  "body": [
      {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "${title}"
      }
  ],
  "actions": [
      {
          "type": "Action.ShowCard",
          "title": "Action 1",
          "card": {
              "type": "AdaptiveCard",
              "version": "1.0",
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
          }
      },
      {
          "type": "Action.OpenUrl",
          "title": "Action 2",
          "url": "${viewUrl}"
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}